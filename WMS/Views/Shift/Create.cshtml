<script type="text/javascript">
    $(document).ready(function () {
        $('#hasbreakdiv').hide();
        $('#HasBreak_Value').click(function () {
            this.checked ? $('#hasbreakdiv').show() : $('#hasbreakdiv').hide(); //time for show
        });
        
        $('#OpenShift').click(function () {
            var value = $('#OpenShift').val();
            value == 'false' ? $('#starttimediv').show() : $('#starttimediv').hide(); //time for show

        });
    });
</script>