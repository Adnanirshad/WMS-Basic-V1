<div class="jumbotron">
@using (Html.BeginForm("Login","Home", FormMethod.Post))
{
    //this  is for create form tag
    @Html.AntiForgeryToken()          // this is for prevent CSRF attack
    @Html.ValidationSummary(true)
    
     <div class="form-horizontal">
            @Html.ValidationSummary(true)

            <div class="form-group">
                <div class="control-label col-md-2" style="font-weight:bold">
                    Username
                </div>
                <div class="col-lg-2 col-xs-5">
                    @Html.TextBoxFor(a=>a.UserName,new { @class = " col-lg-8 form-control" })
                    @Html.ValidationMessageFor(a=>a.UserName)
                </div>
            </div>
          <div class="form-group">
                <div class="control-label col-md-2" style="font-weight:bold">
                    Password
                </div>
                <div class="col-lg-2 col-xs-5">
                    @Html.PasswordFor(a=>a.Password,new { @class = " col-lg-8 form-control" })
                    @Html.ValidationMessageFor(a=>a.Password)
                </div>
            </div>

         <div class="form-group">
                <div class="control-label col-md-2" style="font-weight:bold">
                    
                </div>
                <div class="col-lg-2 col-xs-5">
                    <div class="col-lg-2 col-xs-5 "><input type="submit" value="Login" /></div>
                </div>
            </div>
         <p class="ErorrMessage">@ViewBag.Message</p>
     </div>
}
</div>

