@{
    ViewBag.Title = "Dashboard";
}
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.5 -->
      <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
      <link rel="stylesheet" href="~/Content/Dashboard/AdminLTE.min.css">
      <link rel="stylesheet" href="~/Content/Dashboard/_all-skins.min.css">
  </head>
<article style="background-color:#F4F4F4;">
  <section class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
      <!-- Content Wrapper. Contains page content -->
      <div style="background-color:#F4F4F4;">
        <!-- Content Header (Page header) -->
          <section class="content-header">
          <h1>
            Manager's Dashboard
            <small>Workforce Management System</small>
          </h1>
          <ol class="breadcrumb" style="font-size:14px;">
            <li><a href="#"><i class="ion ion-clock"></i> <label id="Date"></label></a></li>
          </ol>
        </section>
        <!-- Main content -->
        <section class="content">
          <!-- Info boxes -->
          <div class="row">
            <div class="col-md-3 col-sm-6 col-xs-12">
              <div class="info-box">
                <span class="info-box-icon bg-aqua"><i class="ion ion-ios-people"></i></span>
                <div class="info-box-content">
                  <span class="info-box-text">Registered</span>
                  <span class="info-box-number"><label id="RegEmps"></label></span>
                </div><!-- /.info-box-content -->
              </div><!-- /.info-box -->
            </div><!-- /.col -->
            <div class="col-md-3 col-sm-6 col-xs-12">
              <div class="info-box">
                <span class="info-box-icon bg-green"><i class="ion ion-android-person"></i></span>
                <div class="info-box-content">
                  <span class="info-box-text">Present</span>
                  <span class="info-box-number"><label id="PEmps"></label></span>
                </div><!-- /.info-box-content -->
              </div><!-- /.info-box -->
            </div><!-- /.col -->

            <!-- fix for small devices only -->
            <div class="clearfix visible-sm-block"></div>

            <div class="col-md-3 col-sm-6 col-xs-12">
              <div class="info-box">
                <span class="info-box-icon bg-red"><i class="ion-ios-person-outline"></i></span>
                <div class="info-box-content">
                  <span class="info-box-text">Absent</span>
                  <span class="info-box-number"><label id="AEmps"></label></span>
                </div><!-- /.info-box-content -->
              </div><!-- /.info-box -->
            </div><!-- /.col -->
            <div class="col-md-3 col-sm-6 col-xs-12">
              <div class="info-box">
                <span class="info-box-icon bg-yellow"><i class="ion-ios-calendar"></i></span>
                <div class="info-box-content">
                  <span class="info-box-text">Leaves</span>
                  <span class="info-box-number"><label id="LEmps"></label></span>
                </div><!-- /.info-box-content -->
              </div><!-- /.info-box -->
            </div><!-- /.col -->
          </div><!-- /.row -->

            <div class="box-footer">
                  <div class="row">
                    <div class="col-sm-2 col-xs-6">
                      <div class="description-block border-right">
                        <h5 class="description-header"><label id="LIEmps"></label></h5>
                        <span class="description-text">Late In</span>
                        
                      </div><!-- /.description-block -->
                    </div><!-- /.col -->
                    <div class="col-sm-2 col-xs-6">
                      <div class="description-block border-right">
                        <h5 class="description-header"><label id="LOEmps"></label></h5>
                        <span class="description-text">Late Out</span>
                      </div><!-- /.description-block -->
                    </div><!-- /.col -->
                    <div class="col-sm-2 col-xs-6">
                      <div class="description-block border-right">
                        <h5 class="description-header"><label id="EIEmps"></label></h5>
                        <span class="description-text">Early In</span>
                      </div><!-- /.description-block -->
                    </div><!-- /.col -->
                    <div class="col-sm-2 col-xs-6">
                      <div class="description-block">
                        <h5 class="description-header"><label id="EOEmps"></label></h5>
                        <span class="description-text">Early Out</span>
                      </div><!-- /.description-block -->
                    </div>
                      <div class="col-sm-2 col-xs-6">
                      <div class="description-block">
                        <h5 class="description-header"><label id="SLEmps"></label></h5>
                        <span class="description-text">Short Leave</span>
                      </div><!-- /.description-block -->
                    </div>
                      <div class="col-sm-2 col-xs-6">
                      <div class="description-block">
                        <h5 class="description-header"><label id="OTEmps"></label></h5>
                        <span class="description-text">Overtime</span>
                      </div><!-- /.description-block -->
                    </div>
                  </div><!-- /.row -->
                </div>
            <section class="box-footer">
                <div class="col-md-9 col-sm-12 col-xs-12">
                    <!-- LINE CHART -->
                    <div class="box box-info">
                        <div class="box-header with-border">
                            <h3 class="box-title">Late In Trend</h3>
                        </div>
                        <div class="box-body">
                            <div class="chart">
                            <canvas id="lineChart" style="height:250px"></canvas>
                            </div>
                        </div><!-- /.box-body -->
                    </div><!-- /.box -->
                </div>
                <div class="col-md-3 col-sm-12 col-xs-12">
                    <div class="info-boxMY bg-yellow">
                        <div style="padding-left:10px;padding-top:10px;padding-bottom:10px;">
                          <span class="info-box-text">Expected Hours: <label id="EWork"></label></span>
                          <span class="info-box-number">Loss Hours: <label id="LWork"></label></span>
                          <span class="progress-description">
                            Actual Hours: <label id="AWork"></label>
                          </span>
                        </div><!-- /.info-box-content -->
                    </div>
                      <p class="text-center">
                        <strong>Job Cards</strong>
                      </p>
                      <div class="progress-group">
                        <span class="progress-text">Field Visit</span>
                        <span class="progress-number"><b><label id="JCFieldTour"></label></b></span>
                        <div class="progress sm">
                          <div class="progress-bar progress-bar-aqua" style="width: 100%"></div>
                        </div>
                      </div><!-- /.progress-group -->
                      <div class="progress-group">
                        <span class="progress-text">Training</span>
                        <span class="progress-number"><b><label id="JCTraining"></label></b></span>
                        <div class="progress sm">
                          <div class="progress-bar progress-bar-red" style="width: 100%"></div>
                        </div>
                      </div><!-- /.progress-group -->
                      <div class="progress-group">
                        <span class="progress-text">Seminar / Workshop </span>
                        <span class="progress-number"><b><label id="JCSeminar"></label></b></span>
                        <div class="progress sm">
                          <div class="progress-bar progress-bar-green" style="width: 100%"></div>
                        </div>
                      </div><!-- /.progress-group -->
                      <div class="progress-group">
                        <span class="progress-text">Official Duty</span>
                        <span class="progress-number"><b><label id="JCOD"></label></b></span>
                        <div class="progress sm">
                          <div class="progress-bar progress-bar-yellow" style="width: 100%"></div>
                        </div>
                      </div><!-- /.progress-group -->
                    </div>
            </section>
        </section><!-- /.content -->
        </div>
    </div>
