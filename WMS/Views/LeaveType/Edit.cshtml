@model WMS.Models.LvType

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Edit Leave Type: @Model.LvDesc</h3>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.LvTypeID)
        @Html.HiddenFor(model => model.LvDesc)


        <div class="form-group">
            <div class="control-label col-md-2">Report Legend</div>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.FldName, new { @class = "form-control"})
                @Html.ValidationMessageFor(model => model.FldName)
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2"></div>
            <div class="col-md-10">
                @Html.CheckBox("HalfLeave") <span>Has Half Leave</span>
                @Html.ValidationMessageFor(model => model.HalfLeave)
            </div>
        </div>
        <div id="HalfLeaveDataDiv">
            <div class="form-group">
                <div class="control-label col-md-2">Half Leave Legend</div>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.HalfLvCode, new { @class = "form-control"})
                    @Html.ValidationMessageFor(model => model.HalfLvCode)
                </div>
            </div>

            <div class="form-group">
               <div class="control-label col-md-2">Half Absent Legend</div>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.HalfAbCode, new { @class = "form-control"})
                    @Html.ValidationMessageFor(model => model.HalfAbCode)
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-2"></div>
            <div class="col-md-10">
                @Html.CheckBox("Enable") <span>Enable</span>
                @Html.ValidationMessageFor(model => model.Enable)
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-2"></div>
            <div class="col-md-10">
                @Html.CheckBox("CountGZDays") <span>Count GZ Days</span>
                @Html.ValidationMessageFor(model => model.CountGZDays)
            </div>
        </div>

        <div class="form-group">
           <div class="control-label col-md-2"></div>
            <div class="col-md-10">
                @Html.CheckBox("CountRestDays") <span>Count Rest Days</span>
                @Html.ValidationMessageFor(model => model.CountRestDays)
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-2"></div>
            <div class="col-md-10">
                @Html.CheckBox("UpdateBalance") <span>Update Balance</span>
                @Html.ValidationMessageFor(model => model.UpdateBalance)
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-2">Max Days</div>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.MaxDays, new { @class = "form-control"})
                @Html.ValidationMessageFor(model => model.MaxDays)
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2"></div>
            <div class="col-md-10">
                @Html.CheckBox("CarryForward") <span>Carry Forward</span>
                @Html.ValidationMessageFor(model => model.CarryForward)
            </div>
        </div>
        <div id="CarryForwardDataDiv">
            <div class="form-group">
               <div class="control-label col-md-2">Carry Forward Years</div>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.CarryForwardYear, new { @class = "form-control"})
                    @Html.ValidationMessageFor(model => model.CarryForwardYear)
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-2">Carry Forward Days</div>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.CarryForwardDays, new { @class = "form-control"})
                    @Html.ValidationMessageFor(model => model.CarryForwardDays)
                </div>
            </div>
        </div>
        

        <div class="form-group">
           <div class="control-label col-md-2">Max Consective Days</div> 
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.MaxDaysConsective, new { @class = "form-control"})
                @Html.ValidationMessageFor(model => model.MaxDaysConsective)
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Max Days in Months</div>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.MaxDaysMonth, new { @class = "form-control"})
                @Html.ValidationMessageFor(model => model.MaxDaysMonth)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script src="@Url.Content("~/Scripts/LeaveType.js")"  type="text/javascript"></script>