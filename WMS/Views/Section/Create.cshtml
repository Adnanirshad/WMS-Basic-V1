@model WMS.Models.Section

@{
    ViewBag.Title = "Create";
}

<h2>Create Section</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
     
        <hr />
        @Html.ValidationSummary(true)
         
         <div class="form-group">
            <div class="control-label col-md-2">Department</div>
            <div class="col-md-10">
               @* <select class="btn btn-default dropdown-toggle dropdown ComboBoxWidth" id="DeptID" name="DeptID"></select>*@
                @Html.DropDownList("DeptID", null,new { @class = "btn btn-default dropdown-toggle dropdown ComboBoxWidth"})
                @Html.ValidationMessageFor(model => model.DeptID)
            </div>
        </div>
        <div class="form-group">
           <div class="control-label col-md-2">Section</div>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.SectionName,new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SectionName)
            </div>
        </div>

       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default btn-success" />
                 @Html.ActionLink("Back to List", "Index",null,new { @class = "btn btn-primary " })
            </div>
        </div>
    </div>
}

<script src="@Url.Content("~/Scripts/HR/DeptCompanyCreate.js")"></script>
